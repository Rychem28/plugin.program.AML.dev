<DEFINE name="NEOGEO_DRIVERS">neodriv.hxx</DEFINE>
<DEFINE name="SEGA_DRIVERS">system1.cpp or segas16a.cpp or segas16b.cpp or segas18.cpp</DEFINE>

<MAMEFilter>
    <Name>Capcom Play System</Name>
