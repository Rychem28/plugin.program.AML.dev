<!--
    Example Advanced MAME Launcher custom filters
-->
<Advanced_MAME_Launcher_custom_filters>

<!--
    Driver definitions
-->
<DEFINE name="CAPCOM_CPS_DRIVERS">cps1.cpp or cps2.cpp or cps3.cpp</DEFINE>
<DEFINE name="NEOGEO_MVS_DRIVER">neogeo.cpp</DEFINE>

<!--
    Genre definitions
-->
<DEFINE name="STANDARD_GENRES">"Ball &amp; Paddle" or Climbing or Driving or Fighter or Maze or MultiGame or Platform or Puzzle or Shooter or Sports or Whac-A-Mole</DEFINE>

<!--
    Control definitions
-->
<DEFINE name="STANDARD_CONTROLS">Dial or Doublejoy or Joy or Lightgun or "Only Buttons" or Paddle or Pedal or Positional or Stick or Trackball or Triplejoy</DEFINE>

<!--
    Manufacturer/board filters
-->
<MAMEFilter>
    <Name>Atari arcade games</Name>
    <Plot>Machines in Atari arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has Atari</Manufacturer> 
</MAMEFilter>
<MAMEFilter>
    <Name>Capcom arcade games</Name>
    <Plot>Machines in Capcom arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has Capcom</Manufacturer> 
</MAMEFilter>
<MAMEFilter>
    <Name>Capcom CPS board</Name>
    <Plot>Machines in Capcom arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Driver>CAPCOM_CPS_DRIVERS</Driver>
</MAMEFilter>
<MAMEFilter>
    <Name>Konami arcade games</Name>
    <Plot>Machines in Konami arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has Konami</Manufacturer> 
</MAMEFilter>
<MAMEFilter>
    <Name>Midway arcade games</Name>
    <Plot>Machines in Midway arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has Midway</Manufacturer> 
</MAMEFilter>
<MAMEFilter>
    <Name>Namco arcade games</Name>
    <Plot>Machines in Namco arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has Namco</Manufacturer> 
</MAMEFilter>
<MAMEFilter>
    <Name>SEGA arcade games</Name>
    <Plot>Machines in SEGA arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has Sega or has SEGA</Manufacturer> 
</MAMEFilter>
<MAMEFilter>
    <Name>SNK arcade games</Name>
    <Plot>Machines in SNK Neo Geo MVS arcade board</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has SNK or has Snk</Manufacturer> 
</MAMEFilter>
<MAMEFilter>
    <Name>SNK NeoGeo MVS board</Name>
    <Plot>Machines in SNK Neo Geo MVS arcade board</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Driver>NEOGEO_MVS_DRIVER</Driver>
</MAMEFilter>
<MAMEFilter>
    <Name>Taito arcade games</Name>
    <Plot>Machines in Taito arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has Taito</Manufacturer> 
</MAMEFilter>
<MAMEFilter>
    <Name>SONY arcade games</Name>
    <Plot>Machines in SONY arcade boards</Plot>
    <Options>NoCoinLess, NoBIOS, NoMechanical, NoNonworking</Options>
    <Manufacturer>has Sony or has SONY</Manufacturer> 
</MAMEFilter>

<!--
    Family game definitions
-->
<MAMEFilter>
    <Name>Familiy games from the 70'</Name>
    <Plot>Arcade machines from the 60' and 70' with standard genres and controls, excluding mature, BIOSes, mechanical and non-working machines</Plot>
    <Options>NoCoinLess, NoMature, NoBIOS, NoMechanical, NoNonworking</Options>
    <Genre>STANDARD_GENRES</Genre>
    <Controls>STANDARD_CONTROLS</Controls>
    <Year>year &lt; 1980</Year>
</MAMEFilter>
<MAMEFilter>
    <Name>Familiy games from the 80'</Name>
    <Plot>Arcade machines from the 80' with standard genres and controls, excluding mature, BIOSes, mechanical and non-working machines</Plot>
    <Options>NoCoinLess, NoMature, NoBIOS, NoMechanical, NoNonworking</Options>
    <Genre>STANDARD_GENRES</Genre>
    <Controls>STANDARD_CONTROLS</Controls>
    <Year>year >= 1980 and year &lt; 1990</Year>
</MAMEFilter>
<MAMEFilter>
    <Name>Familiy games from the 90'</Name>
    <Plot>Arcade machines from the 90' with standard genres and controls, excluding mature, BIOSes, mechanical and non-working machines</Plot>
    <Options>NoCoinLess, NoMature, NoBIOS, NoMechanical, NoNonworking</Options>
    <Genre>STANDARD_GENRES</Genre>
    <Controls>STANDARD_CONTROLS</Controls>
    <Year>year >= 1990 and year &lt; 2000</Year>
</MAMEFilter>
<MAMEFilter>
    <Name>Familiy games from the 00'</Name>
    <Plot>Arcade machines from the XXI century with standard genres and controls, excluding mature, BIOSes, mechanical and non-working machines</Plot>
    <Options>NoCoinLess, NoMature, NoBIOS, NoMechanical, NoNonworking</Options>
    <Genre>STANDARD_GENRES</Genre>
    <Controls>STANDARD_CONTROLS</Controls>
    <Year>year >= 2000</Year>
</MAMEFilter>

</Advanced_MAME_Launcher_custom_filters>
